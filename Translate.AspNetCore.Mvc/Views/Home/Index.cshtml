@{
    ViewData["Title"] = "Çeviri Sayfası";
}

<main class="main-content">
    <div class="container">
        <section class="translator-section">
            <form asp-controller="Home" asp-action="Translate" method="post" class="translator-container">
                <div class="translator-box">
                    <div class="language-selector">
                        <select name="fromLang" class="from-lang">
                            <option value="tr">Türkçe</option>
                            <option value="en">İngilizce</option>
                        </select>
                        <button type="button" class="swap-lang" aria-label="Dilleri Değiştir">⇄</button>

                        <select name="toLang" class="to-lang">
                            <option value="en">İngilizce</option>
                            <option value="tr">Türkçe</option>
                        </select>
                    </div>

                    <div class="translation-area">
                        <div class="input-area">
                            <textarea name="word"
                                      class="input-text"
                                      placeholder="Çeviri için metin girin..."
                                      maxlength="5000">@ViewBag.Word</textarea>
                        </div>

                        <div class="output-area">
                            <textarea class="output-text"
                                      placeholder="Çeviri burada görünecek..."
                                      readonly>@ViewBag.Translation</textarea>
                        </div>
                    </div>

                    <div class="translation-actions">
                        <button type="submit" class="translate-button">
                            Çeviri Yap
                        </button>
                    </div>
                </div>
            </form>
        </section>
    </div>
</main>